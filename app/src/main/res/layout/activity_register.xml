<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">

        <EditText
            android:id="@+id/txtAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/textview"
            android:hint="Adınız"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/color_assets_7"
            android:textColorHint="@color/color_assets_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/txtCinsiyet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:background="@drawable/textview"
            android:hint="Cinsiyet"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/color_assets_7"
            android:textColorHint="@color/color_assets_14"
            app:layout_constraintEnd_toEndOf="@+id/txtPasswordTekrar"
            app:layout_constraintStart_toStartOf="@+id/txtPasswordTekrar"
            app:layout_constraintTop_toBottomOf="@+id/txtPasswordTekrar" />

        <EditText
            android:id="@+id/txtDogumTarihi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:background="@drawable/textview"
            android:hint="Doğum Tarihi"
            android:inputType="date|text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/color_assets_7"
            android:textColorHint="@color/color_assets_14"
            app:layout_constraintEnd_toEndOf="@+id/txtCinsiyet"
            app:layout_constraintStart_toStartOf="@+id/txtCinsiyet"
            app:layout_constraintTop_toBottomOf="@+id/txtCinsiyet" />

        <EditText
            android:id="@+id/txtIl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:background="@drawable/textview"
            android:hint="Şehir"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/color_assets_7"
            android:textColorHint="@color/color_assets_14"
            app:layout_constraintEnd_toEndOf="@+id/txtTeshisTarihi"
            app:layout_constraintStart_toStartOf="@+id/txtTeshisTarihi"
            app:layout_constraintTop_toBottomOf="@+id/txtTeshisTarihi" />

        <EditText
            android:id="@+id/txtDiyabetTipi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:background="@drawable/textview"
            android:hint="Diyabet Tipi"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/color_assets_7"
            android:textColorHint="@color/color_assets_14"
            app:layout_constraintEnd_toEndOf="@+id/txtDogumTarihi"
            app:layout_constraintStart_toStartOf="@+id/txtDogumTarihi"
            app:layout_constraintTop_toBottomOf="@+id/txtDogumTarihi" />

        <EditText
            android:id="@+id/txtTeshisTarihi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:background="@drawable/textview"
            android:hint="Teshis Konduğu Tarih"
            android:inputType="date"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/color_assets_7"
            android:textColorHint="@color/color_assets_14"
            app:layout_constraintEnd_toEndOf="@+id/txtDiyabetTipi"
            app:layout_constraintStart_toStartOf="@+id/txtDiyabetTipi"
            app:layout_constraintTop_toBottomOf="@+id/txtDiyabetTipi" />

        <EditText
            android:id="@+id/txtIlce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:background="@drawable/textview"
            android:hint="İlçe"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/color_assets_7"
            android:textColorHint="@color/color_assets_14"
            app:layout_constraintEnd_toEndOf="@+id/txtIl"
            app:layout_constraintStart_toStartOf="@+id/txtIl"
            app:layout_constraintTop_toBottomOf="@+id/txtIl" />

        <EditText
            android:id="@+id/txtSoyad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:background="@drawable/textview"
            android:hint="Soyadınız"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/color_assets_7"
            android:textColorHint="@color/color_assets_14"
            app:layout_constraintEnd_toEndOf="@+id/txtAd"
            app:layout_constraintStart_toStartOf="@+id/txtAd"
            app:layout_constraintTop_toBottomOf="@+id/txtAd" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:background="@drawable/textview"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/color_assets_7"
            android:textColorHint="@color/color_assets_14"
            app:layout_constraintEnd_toEndOf="@+id/txtSoyad"
            app:layout_constraintStart_toStartOf="@+id/txtSoyad"
            app:layout_constraintTop_toBottomOf="@+id/txtSoyad" />

        <EditText
            android:id="@+id/txtPasswordTekrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:background="@drawable/textview"
            android:hint="Parola Tekrar"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:selectAllOnFocus="true"
            android:textColorHighlight="@color/color_assets_14"
            android:textColorHint="@color/color_assets_14"
            app:layout_constraintEnd_toEndOf="@+id/txtPassword"
            app:layout_constraintStart_toStartOf="@+id/txtPassword"
            app:layout_constraintTop_toBottomOf="@+id/txtPassword" />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:background="@drawable/textview"
            android:hint="Parola"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:selectAllOnFocus="true"
            android:textColorHighlight="@color/color_assets_14"
            android:textColorHint="@color/color_assets_14"
            app:layout_constraintEnd_toEndOf="@+id/txtEmail"
            app:layout_constraintStart_toStartOf="@+id/txtEmail"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/gradient"
            android:text="Kayıt Ol"
            android:textColor="@color/color_assets_1"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtIlce"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Kayıt Ol"
            android:textColor="@color/color_assets_3"
            android:textSize="24sp"
            app:fontFamily="@font/gotham_rounded_medium"
            app:layout_constraintEnd_toEndOf="@+id/txtAd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtAd"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
